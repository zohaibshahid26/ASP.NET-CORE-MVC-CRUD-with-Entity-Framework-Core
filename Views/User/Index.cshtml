@model IEnumerable<Lab3.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-primary mt-3">Add User</a>

@if (!Model.Any())
{
    <h2 class="mt-3">No users found. Please add a user.</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>User ID</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Address</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@user.UserId" class="btn btn-warning">Update</a>
                        <form asp-action="Delete" asp-route-id="@user.UserId" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #4CAF50;
        color: black;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .btn {
        padding: 5px 10px;
        margin-right: 5px;
    }
</style>
